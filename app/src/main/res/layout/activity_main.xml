<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp"
        android:gravity="top|center_horizontal"
        android:background="#80FFFFFF">

        <!-- 시흥 로고 -->

        <!-- 아이디 -->

        <!-- ✅ PNG 파일 이름에 맞게 수정 -->


        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="450dp"
            android:layout_height="338dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="시흥 로고"
            android:src="@drawable/siheung_logo_png" />

        <EditText
            android:id="@+id/etPhone"
            android:hint="아이디 / 전화번호"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="12dp" />

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/etPassword"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="12dp" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:text="로그인"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_blue"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- 비회원 로그인 버튼 -->
        <Button
            android:id="@+id/btnGuest"
            android:text="비회원으로 로그인"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_dark"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- 로그인 아래 회원가입 버튼 추가 -->
        <Button
            android:id="@+id/btnSignup"
            android:text="회원가입"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_dark"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />


        <!-- 카카오 로그인 버튼 (이미지 포함 LinearLayout) -->
        <LinearLayout
            android:id="@+id/btnKakaoLogin"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_kakao"
            android:gravity="center"
            android:paddingStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_kakao_logo"
                android:contentDescription="카카오 아이콘" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오 로그인"
                android:textSize="16sp"
                android:textColor="#191919"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
